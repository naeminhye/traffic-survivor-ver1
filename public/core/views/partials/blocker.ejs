<div id="blocker" class="screen-element">
    <div class="center-div" id="game-menu">
        <div class="menu-item">
            <a id="start-btn" class="btn is-success">Start</a>
            <a id="restart-btn" class="btn is-warning">Restart</a>
            <a id="instruction-btn" class="btn is-warning">Instruction</a>
            <a class="btn is-error" id="exit-btn" data-target="#exit-dialog">Exit</a>
        </div>
    </div>
    <div id="exit-dialog" class="center-div dialog">
        <div class="dialog-content">
            <div class="question">
                <span>Do you want to exit without completing the lesson?</span>
            </div>
            <div style="display: flex; align-items: center; justify-content: space-evenly; width: 100%;">
                <button id="cancel-exit" class="btn">No</button>
                <button onclick="location.href = '/'" class="btn is-error">Yes</button>
            </div>
        </div>
    </div>
    <div id="key-instruction" class="key-instruction-container center-div dialog">
        <table>
            <tr>
                <td class="key-name"><span>W/Up</span></td>
                <td class="key-definition"><span>Move Forward</span></td>
            </tr> 
            <tr>
                <td class="key-name"><span>A/Left</span></td>
                <td class="key-definition"><span>Rotate Left</span></td>
            <tr>
                <td class="key-name"><span>D/Right</span></td>
                <td class="key-definition"><span>Rotate Right</span></td>
            </tr>
            <tr>
                <td class="key-name"><span>Z</span></td>
                <td class="key-definition"><span>Keep Moving Forward</span></td>
            </tr>
            <tr>
                <td class="key-name"><span>X</span></td>
                <td class="key-definition"><span>Stop Moving</span></td>
            </tr>
            <tr>
                <td class="key-name"><span>Shift</span></td>
                <td class="key-definition"><span>Accelerate</span></td>
            </tr>
            <tr>
                <td colspan="2" class="key-instruction-btn"><a id="instruction-close" class="btn is-primary">Close</a></td>
            </tr>
        </table>
    </div>
</div>