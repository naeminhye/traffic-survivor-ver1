                window.location.href = '/levels'; 
                // $("#login-dialog").css("display", "block");
                // $("#game-menu").css("display", "none");
            });

            $("#cancel-btn").click(() => {
                $("#login-dialog").css("display", "none");
                $("#game-menu").css("display", "flex");
            });

            $("#ok-btn").click(() => {
